<div class="wrapper">
  <div style="padding-top:100px;"></div>
  <h1>Welcome to Happy !</h1>

  <p>
    email: <%= @profile.email %>
    <br>
    id: <%= @profile.id %>
  </p>


  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="form-profile-creation">
          <h2>Let's start with your values</h2>
          <h3>Select 3 core values</h3>
          <%= simple_form_for @profile, url: profile_path do |f| %>
            <!-- Inject categories here -->
            <div class="form-group">
              <input type="hidden" name="post[value_ids][]" value="">

              <div class="value-choices">
                <% Value.all.each do |value| %>
                  <input type="checkbox" class="hidden" value="<%= value.id %>" name="talent[value_ids][]" id="talent_value_ids_<%= value.id %>">
                  <label class="value-choice" for="talent_value_ids_<%= value.id %>">
                    <%= value.name %>
                  </label>
                <% end %>
               </div>

            </div>
            <div class="step-2">
              <h2>Great!</h2>
              <h3>Now, tell us about you</h3>
            </div>
            <!-- Inject categories here -->
            <%= f.input :first_name, placeholder: "Patricio" %>
            <%= f.input :last_name, placeholder: "Perez" %>
            <%= f.association :position, collection: Position.all, prompt: "current position?" %>
            <%= f.input :url_linkedin, placeholder: "Linkedin profile" %>
            <%= f.input :experience, placeholder: "6 years" %>
            <%= f.input :avatar %>
            <%= f.input :avatar_cache, as: :hidden %>
            <%= f.submit "Save", class: "btn-standard"  %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>


