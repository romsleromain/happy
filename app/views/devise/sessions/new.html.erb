<div class="login-layout" id="home">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://images.pexels.com/photos/429247/pexels-photo-429247.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940);">
    <div class="left-screen">
      <div class="banner-content">
        <%= image_tag "logo.png", height: 80, class: "logo"%>
        <div class="login-elements">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" },
                          placeholder: "jean-michel@login.com" %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" },
                          placeholder: "******" %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Log in" %>
            </div>
          <% end %>

          <div class="other-links">
            <%= render "devise/shared/links" %>
          </div>

        </div>
      </div>
    </div>
    <div class="right-screen">
    </div>
  </div>
</div>


