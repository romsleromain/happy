<div class="container-feedpage">
  <div class="container-companies-managers">
    <div class="headers">
      <h1 class="header-feed">Your next move?</h1>
      <h4 class="subhead-feed"> Find companies looking for your profile</h1>
    </div>
     <div class="headers">
      <h1>Take a look at those new matching companies</h1>
      <h4>Why not expanding your network by following them!</h1>
        <% @feed.each do |company| %>
        <div class="col-lg-12 companies-feed">
          <% if current_talent.following?(company) == false %>
            <div class="company-card cible">
                <div class="effect-left">
                </div>
                  <div class="card-background"style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.2)), url('<%= cl_image_path company.teampicture.url, height: 300, width: 400, crop: :fill %>');">
                  <div class="card-btn">
                    <%= link_to "Follow", follow_path(company.id, source: :feeds), class: "btn-follow-company"%>
                  </div>
                  <div class="card-score">
                    <h3> <%= company.rating_score(current_talent) if current_talent %> % </h3>
                  </div>
                  <p class="card-description"><%= company.name %></p>
                  </div>
                <div class="effect-right">
                </div>
            </div>
            <br>
          <% end %>
        </div>
        <% end %>
     </div>
  </div>
  <div class="container-feedcontent">
    <div class="headers">
      <h1>Your feed</h1>
      <h4>What's new about your favorite companies?</h1>
    </div>
      <% @feed.each do |thing| %>
        <% if current_talent.following?(thing) %>
        <div class="row-content">
          <div class="content-logo">
            <img class="logo-feed"src="<%= thing.logo %>">
          </div>
          <div class="content-text">
            <a href="<%= thing.latestnews %>" class="post-header" target="_blank"><%= thing.latestnews_summary %></a>
            <p class="post-media">Media : <%= thing.latestnews_media %></p>
          </div>
        </div>
        <% end %>
      <% end %>
  </div>

</div>
