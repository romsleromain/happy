<div class="main-container">
  <div class="container-feedpage">
    <div class="container-companies-managers">
      <div class="headers">
        <h1 class="header-feed">Job offers</h1>
        <h4 class="subhead-feed">Get to know your next managers</h4>
          <div class="jobs-container-feed">
            <% @job_offers.each do |job| %>
              <div class="job-card-feed">
                <div class="first-level-feed">
                  <div class="hidden-des">
                    <p>"<%= job.description %>"</p>
                  </div>
                  <img src="<%= cl_image_path job.photomanager.url %>" class="avatar avatar-feed">
                  <div class="job-info-feed text-center">
                    <div class="infos">
                      <h1><%= job.manager_name %></h1>
                      <h2>@<%= job.company.name %></h2>
                    </div>
                  </div>
                </div>
                <div class="second-level-feed">
                  <div class="hidden-btn">
                    <!-- hidden-btn -->
                    <button class="ask-btn" id="contact">Start a chat</button>
                  </div>
                  <div class="job-info text-center">
                    <p>is hiring a</p>
                    <h1><%= job.name %></h1>
                  </div>

                </div>
              </div>
            <% end %>
          </div>
      </div>
       <div class="headers-companies">
        <div class="headers-text header-network">
          <h1 class="header-feed">Spot the best companies</h1>
          <h4>Expand your network</h1>
        </div>
        <div class="companies-cards">
          <div class="companies-feed">
            <div class="col-lg-12">
              <% @companies.each do |company|  %>
                <% if current_talent.following?(company) %>
                  <div id='<%= "company_card_#{company.id}" %>'>
                    <%= render '../views/companies/followcard', company: company %>
                  </div>
                <% else %>
                  <div id='<%= "company_card_#{company.id}" %>'>
                    <%= render '../views/companies/unfollowcard', company: company %>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
       </div>
    </div>
    <div class="container-feedcontent">

      <div class="headers header-job" style="text-align: center;">
        <h1 class="header-feed">Lastest news</h1>
        <h4>Stay updated</h1>

      </div>
      <div class="row-content-global">
        <% @feed.each do |thing| %>
          <% if current_talent.following?(thing) %>
            <div class="row-content">
              <div class="content-logo">
                <p><%= thing.name %></p>
<!--                 <img class="logo-feed"src="<%= thing.logo %>"> -->
              </div>
              <div class="content-text">
                <p><%= thing.latestnews_summary %></p>
                <p class="post-media">Type : <%= thing.latestnews_media %></p>
                <div class="readit">
                  <a href="<%= thing.latestnews %>" class="read-it" target="_blank">Read it</a>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

  </div>
</div>
